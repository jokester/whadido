{
  "name": "whadido",
  "version": "0.1.0",
  "description": "Analyze and visualize recent operations in local git repository.",
  "main": "index.js",
  "scripts": {
    "start": "node lib/index.js",
    "start:ts": "ts-node lib-ts/index.ts",
    "build": "      rm -rf lib/* && tsc",
    "build:watch": "rm -rf lib/* && tsc --watch",
    "test": "         npm run build && jest --forceExit",
    "test:coverage": "npm run build && jest --forceExit --coverage",
    "test:watch": "   npm run build && jest --forceExit --watch",
    "tslint": "tslint -c tslint.json ts-lib/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jokester/whadido.git"
  },
  "keywords": [
    "visualization",
    "git"
  ],
  "author": "Wang Guan <momocraft@gmail.com>",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/jokester/whadido/issues"
  },
  "engines": {
    "node": ">= 4.0.0"
  },
  "homepage": "https://github.com/jokester/whadido#readme",
  "dependencies": {
    "@types/argparse": "^1.0.30",
    "argparse": "^1.0.9",
    "recursive-readdir": "^2.2.1",
    "tslib": "^1.6.0"
  },
  "devDependencies": {
    "@types/chai": "^3.5.0",
    "@types/jest": "^19.2.2",
    "@types/node": "^4.0.0",
    "chai": "^3.5.0",
    "jest": "^20.0.4",
    "ts-jest": "^20.0.4",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "typescript": "^2.3.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "roots": [
      "lib-ts",
      "lib"
    ],
    "testMatch": [
      "**/*\\.(spec|test)\\.(ts|js|tsx|jsx)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "mapCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
